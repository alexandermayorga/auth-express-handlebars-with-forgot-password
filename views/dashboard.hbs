<div class="container dashboard">
	{{>dashboard_nav}}
	<div class="dash_body">
		{{#unless active}}
		<div class="alert alert-info text-center" role="alert">
			<span style="margin-right: 15px;">Account has not been verified</span> <button id="resend-verification" class="btn btn-info btn-sm">Resend Verification Link</button>
		</div>
		{{/unless}}

		Welcome to your dashboard
	</div>
</div>

<script>
	$('#resend-verification').on('click',function(){
		$.ajax({
			type: 'POST',
			url: '/verify-account',
			success: (data) => {
				alert("Email Sent")
			},
			error: (err) => {
				alert('There was an error')
			}
		})
	})
</script>