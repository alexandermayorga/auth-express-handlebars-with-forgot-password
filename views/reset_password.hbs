    <div class="container_login">
        {{#if validURI}}
        <form id="reset_form">
            <h1>Update your Password</h1>
            <div>
                <input type="hidden" id="resetToken" name="resetToken" value="{{resetToken}}">
            </div>

            <div>
                <input type="password" id="password" name="password" placeholder="enter your password">
            </div>

            <div>
                <input type="password" id="password_confirm" name="password_confirm" placeholder="Re-Enter password">
            </div>

            <button type="submit">Submit</button>
            <span>or
                <a href="/">Cancel</a>
            </span>
        </form>
        {{else}}

        <div>
            Your <strong>Reset Link</strong> has expired or <strong>This is an invalid URI</strong>.<br><br>
            Please check your email for correct link or request a <strong><a href="/forgot-password">New Reset Link</a></strong>.
        </div>

        {{/if}}
    </div>

    <script>
        // Form Validation
            // Form Validation
            $("#reset_form").validate({
                rules: {
                    password: {
                        required: true,
                        minlength: 5
                    },
                    password_confirm: {
                        required: true,
                        minlength: 5,
                        equalTo: "#password"
                    }
                },
                messages: {
                    password: {
                        required: "The password is required",
                        minlength: "The min is 5 characters"
                    },
                    password_confirm: "Password is not the same :S"
                },
                submitHandler: function (form, event) {
                    event.preventDefault();
                    submitForm();
                }
            });

            function submitForm() {
                const user = {
                    resetToken: $('#resetToken').val(),
                    password: $('#password').val()
                }
                $.ajax({
                    type: 'POST',
                    url: '/reset-password',
                    data: JSON.stringify(user),
                    contentType: 'application/json',
                    success: () => {
                        alert("Password changed successfully! Log In to dashboard");
                        window.location.href = '/login'
                    },
                    error: (err) => {
                        const { message } = err.responseJSON;
                        alert(message);
                    }
                })
            }

    </script>